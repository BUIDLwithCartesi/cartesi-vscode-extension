{
  "name": "cartana",
  "displayName": "Cartana",
  "description": "Cartana streamlines Cartesi Rollup development by integrating essential tools directly into Visual Studio Code.",
  "version": "0.0.0",
  "license": "MIT",
  "engines": {
    "vscode": "*"
  },
  "publisher": "CartanaLabs",
  "homepage": "#",
  "repository": {
    "type": "git",
    "url": ""
  },
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Formatters",
    "Linters",
    "Snippets",
    "Testing",
    "Other"
  ],
  "icon": "media/icon.png",

  "activationEvents": [],
  "main": "./extension.js",

  "contributes": {
    "commands": [
      {
      "command": "Cartana.Create",
      "title": "Create Project"
    },
    {
      "command": "Cartana.build",
      "title": "Build"
    },
    {
      "command": "Cartana.run",
      "title": "Run"
    },
    {
      "command": "Cartana.test",
      "title": "Test"
    },
    {
      "command": "Cartana.deploy",
      "title": "Deploy"
    },
    {
      "command": "Cartana.addressBook",
      "title": "Address Book"
    },
    {
      "command": "Cartana.clean",
      "title": "Clean"
    },
    {
      "command": "Cartana.hash",
      "title": "Hash"
    },
    {
      "command": "Cartana.verify",
      "title": "Verify"
    },
    {
      "command": "Cartana.debug",
      "title": "Debug"
    },
    {
      "command": "Cartana.settings",
      "title": "Settings"
    },
    {
      "command": "Cartana.documentation",
      "title": "Documentation"
    },
    {
      "command": "Cartana.about",
      "title": "About"
    }
  ],
    "viewsContainers": {
      "activitybar": [{
        "id": "Cartana",
        "title": "Cartana",
        "icon": "media/icon.png"
      }]
    },
    "views": {
      "cartesi": [{
        "id": "CartanaView",
        "name": "Cartana"
      }]
    }
  },

  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },

  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.19.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }

}
