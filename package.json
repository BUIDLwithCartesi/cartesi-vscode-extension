{
  "name": "cartana",
  "displayName": "Cartana",
  "description": "Cartana streamlines Cartesi Rollup development by integrating essential tools directly into Visual Studio Code.",
  "version": "0.0.0",
  "license": "MIT",
  "engines": {
    "vscode": "^1.97.2"
  },
  "type": "module",
  "publisher": "CartanaStudio",
  "homepage": "#",
  "repository": {
    "type": "git",
    "url": "https://github.com/Cartana-Studio/Cartana-vs-code"
  },

  "categories": [
    "Programming Languages",
    "Debuggers",
    "Formatters",
    "Linters",
    "Snippets",
    "Testing",
    "Other"
  ],

  "icon": "media/icon.png",
  
  "main": "./extension.js",

  "activationEvents": [ 
  ],

  "contributes": {
    "commands": [
      {
        "command": "cartana.create",
        "title": "Create Project"
      },
      {
        "command": "cartana.build",
        "title": "Build"
      },
      {
        "command": "cartana.run",
        "title": "Run"
      },
      {
        "command": "cartana.test",
        "title": "Test"
      },
      {
        "command": "cartana.deploy",
        "title": "Deploy"
      },
      {
        "command": "cartana.addressBook",
        "title": "Address Book"
      },
      {
        "command": "cartana.clean",
        "title": "Clean"
      },
      {
        "command": "cartana.hash",
        "title": "Hash"
      },
      {
        "command": "cartana.verify",
        "title": "Verify"
      },
      {
        "command": "cartana.debug",
        "title": "Debug"
      },
      {
        "command": "cartana.settings",
        "title": "Settings"
      },
      {
        "command": "cartana.documentation",
        "title": "Documentation"
      },
      {
        "command": "cartana.about",
        "title": "About"
      },
      {
        "command": "cartana.help",
        "title": "Help"
      },
      {
        "command": "cartana.refresh",
        "title": "Refresh Cartana Explorer"
      },
      {
        "command": "cartana.showWebview",
        "title": "Show Webview"
      }
    ],
    "viewsWelcome": [
      {
        "view": "cartanaViewSidebar",
        "icon": "media/icon1.png",
        "contents": "Welcome to Cartana! To get started, you can create a new project or open an existing one.\n[Create Project](command:cartana.create)\n[Open Project](command:vscode.openFolder)\nTo learn more about Cartana, [read our documentation](https://github.com/Cartana-Studio/Cartana-vs-code).",
        "when": "workbenchState == empty"
      }
    ],

    "viewsContainers": {
      "activitybar": [{
        "id": "cartana",
        "title": "cartana",
        "icon": "media/icon1.png"
      }]
    },

    "views": {
      "cartana": [{
        "id": "cartanaViewSidebar",
        "name": "Cartana Sidebar"
      }],
      "explorer": [
        {
          "id": "cartanaViewExplorer",
          "name": "Cartana Explorer"
        },
        {
          "id": "cartanaView",
          "name": "Cartana View"
        }
      ]
    }
  },
  
  "menus": {
    "view/item/context": [
        {
            "command": "cartana.refresh",
            "when": "viewItem == cartanaItem",
            "group": "navigation"
        }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },

  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.19.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}